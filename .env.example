# OpenWorld TSHM Environment Configuration
# Copy this file to .env and update values as needed

# OpenAI API Configuration (for LLM integration)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# Optional OpenAI organization/project identifiers
OPENAI_ORG=
OPENAI_PROJECT=
# Prefer modern OpenAI Agents/Responses API when true
OW_TSHM_USE_OAI_AGENTS=true

# Local LLM Configuration (for offline LLM integration)
OLLAMA_MODEL=llama3

# Data Directories
OW_TSHM_DATA_DIR=./data
OW_TSHM_ARTIFACTS_DIR=./artifacts

# Provenance Ledger
OW_TSHM_PROVENANCE_LEDGER=./provenance/ledger.jsonl

# File Size Limits (in MB)
OW_TSHM_MAX_CSV_MB=50

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
# Comma-separated origins for CORS (optional)
DASHBOARD_CORS_ORIGINS=

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
# Log output format: rich or json
LOG_FORMAT=rich
